// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Invoice {
  id          String   @id @default(uuid())
  clientName  String
  clientEmail String?
  amount      Float
  status      String   @default("PENDING") // PENDING, PAID, OVERDUE
  date        DateTime @default(now())
  dueDate     DateTime?
  items       String   // JSON string or relation could be used, keeping it simple for now
  isRecurring Boolean  @default(false)
  recurringInterval String? // e.g., "MONTHLY", "WEEKLY"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  category    String
  amount      Float
  date        DateTime @default(now())
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Optional: Transaction model for unified view, though we can query both tables
model Transaction {
  id          String   @id @default(uuid())
  type        String   // INCOME, EXPENSE
  amount      Float
  date        DateTime
  description String
  referenceId String?  // ID of Invoice or Expense
  createdAt   DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  createdAt DateTime @default(now())
}
